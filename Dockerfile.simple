# Use a minimal Python image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install just Flask
RUN pip install --no-cache-dir flask

# Copy only our simple server
COPY src/simple_server.py ./src/simple_server.py

# Set environment variables
ENV PORT=8080

# Expose the port
EXPOSE 8080

# Run the application
CMD ["python", "src/simple_server.py"]