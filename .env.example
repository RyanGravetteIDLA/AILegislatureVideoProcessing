# API Configuration
API_PORT=5000
FILE_PORT=5001
DEBUG=True

# Database Configuration
DB_TYPE=firestore  # Options: sqlite, firestore

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GCP_REGION=us-west1
GOOGLE_APPLICATION_CREDENTIALS=credentials/your-service-account-key.json

# Cloud Storage Configuration
GCS_BUCKET_NAME=your-bucket-name.appspot.com
USE_CLOUD_STORAGE=true
PREFER_CLOUD_STORAGE=true

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_FILE_SERVER_URL=http://localhost:5001/files

# Deployment Configuration
SERVICE_ACCOUNT=firebase-adminsdk-fbsvc@your-project-id.iam.gserviceaccount.com
CLOUD_FUNCTION_NAME=media-portal-api
CLOUD_RUN_SERVICE_NAME=media-portal-backend

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL